<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/RecyclerImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/RecyclerTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/RecyclerImageView"
            android:text="Text1"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RecyclerTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RecyclerTextView1"
            android:layout_alignStart="@id/RecyclerTextView1"

            android:layout_margin="5dp"
            android:text="Text2"
            android:textColor="@android:color/black"
            android:textSize="15sp"


            android:textStyle="italic" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
