<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/RecyclerImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/RecyclerTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text1"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/RecyclerImageView"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/RecyclerTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text2"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_alignLeft="@id/RecyclerTextView1"
            android:layout_below="@+id/RecyclerTextView1"
            android:textSize="15sp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
