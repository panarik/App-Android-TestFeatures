<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.panarik.smartFeatures.activity.ShopOrderActivity">

    <TextView
        android:id="@+id/shop_orderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/shop_order_buttonToEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_above="@id/shop_order_callButton"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:text="Send By Email"
        android:onClick="addToCart"/>

    <Button
        android:id="@+id/shop_order_callButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:text="Call to Order" />

</RelativeLayout>